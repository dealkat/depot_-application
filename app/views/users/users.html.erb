<h1>Listing Users</h1>
<table>
  <h3> Name </h3><br />
  <tr>
    <% for user in @user %>
    <td width="60%">
       <%= user.login %>
    </td>
    <td class="list-actions">
       <%= link_to 'Show', user %>
       <%= link_to 'Edit', edit_user_path(user) %>
       <%= link_to 'Destroy', user,
                      :confirm => 'Are you sure?',
                      :method => :delete %>
      </td>
  </tr>
    <% end %>
  
</table> <br />
<%= link_to 'New user', new_user_path %>

